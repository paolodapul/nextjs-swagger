{
  "openapi": "3.0.0",
  "info": {
    "title": "Hello API",
    "version": "1.0.0",
    "description": "A simple API to return a greeting message."
  },
  "paths": {
    "/api/hello": {
      "get": {
        "summary": "Get a greeting message",
        "operationId": "getHello",
        "responses": {
          "200": {
            "description": "A greeting message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello, world!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
